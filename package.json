{
  "name": "gemini-chat-extension",
  "displayName": "Gemini Chat",
  "description": "Rich chat interface for Gemini CLI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "geminiChat.open",
        "title": "Open Gemini Chat"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gemini-chat-sidebar",
          "title": "Gemini Chat",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "gemini-chat-sidebar": [
        {
          "type": "webview",
          "id": "geminiChat.view",
          "name": "Gemini Chat"
        }
      ]
    },
    "configuration": {
      "title": "Gemini Chat",
      "properties": {
        "geminiChat.cliPath": {
          "type": "string",
          "default": "gemini",
          "description": "Path to the Gemini CLI executable"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.109.0",
    "autoprefixer": "^10.4.24",
    "css-loader": "^7.1.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "lucide-react": "^0.574.0",
    "marked": "^17.0.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
